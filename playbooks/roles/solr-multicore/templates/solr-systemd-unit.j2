[Unit]
Description=Apache SOLR
After=syslog.target network.target remote-fs.target nss-lookup.target
[Service]
PIDFile={{ solr_installPath }}/solr.pid
WorkingDirectory={{ solr_installPath }}/{{ solr_multicoreRoot }}
ExecStart=/usr/bin/java -jar {{ solr_installPath }}/{{ solr_multicoreRoot }}/start.jar
User=solr
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
PrivateTmp=true
[Install]
WantedBy=multi-user.target
